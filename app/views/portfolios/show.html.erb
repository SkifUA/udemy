<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolios_item.main_image, width: '100' %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolios_item.title %></h1>

      <em><%= @portfolios_item.subtitle %></em>
      <p><%= @portfolios_item.body %></p>

      <h2>Technologies Used:</h2>
      <% @portfolios_item.technologies.each do |t| %>
          <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>

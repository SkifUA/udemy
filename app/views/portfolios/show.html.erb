<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolios_item.main_image, 'main'), width: '100%' %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolios_item.title %></h1>

      <em><%= @portfolios_item.subtitle %></em>
      <p><%= @portfolios_item.body %></p>

      <h2>Technologies Used:</h2>
      <% @portfolios_item.technologies.each do |t| %>
          <p><%= t.name %></p>
      <% end %>

      <% if logged_in?(:site_admin) %>
        <div class="">
          <%= link_to "Edit Item", edit_portfolio_path(@portfolios_item), class: 'btn btn-warning' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

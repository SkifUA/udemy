<div class="card">
  <%= image_tag portfolios_item.thumb_image, alt: "Card image cap" unless portfolios_item.thumb_image.nil? %>
  <p class="card-text">
    <span><%= link_to portfolios_item.title, portfolio_show_path(portfolios_item.id) %></span>
    <%= portfolios_item.subtitle %>
  </p>
  <!--<p class="card-text"><%#= portfolios_item.body %></p>-->
  <p>
    <% if logged_in?(:site_admin)%>
        <%= link_to "Edit Items", edit_portfolio_path(portfolios_item.id) %> /
        <%= link_to "Delete portfolio Item",
                    portfolios_item,
                    method: :delete,
                    data: { confirm: 'Are you sure?' }
        %>
    <% end %>
  </p>

</div>